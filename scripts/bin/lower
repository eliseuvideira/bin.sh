#!/usr/bin/env bash
usage() {
    printf "lower: usage: lower CONTENT\n" >&2
}

exit_with_error() {
    printf "lower: error: %s\n" "$1" >&2
    usage
    exit 1
}

if ! [ -p /dev/stdin ] && ! [ "$#" -gt 0 ]; then
    exit_with_error "missing CONTENT argument"
fi

if [ -p /dev/stdin ]; then
    tr '[:upper:]' '[:lower:]'
else
    echo "$@" | tr '[:upper:]' '[:lower:]'
fi
