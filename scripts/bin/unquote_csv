#!/usr/bin/env bash
OPTIONS="$(getopt -o c: -l quote: -- "$@")"
eval set -- "$OPTIONS"

quote='"'
while true; do
    case "$1" in
    -c | --quote)
        quote="$2"
        shift 2
        ;;
    --)
        shift
        break
        ;;
    *)
        shift
        ;;
    esac
done

sed_pattern="s/^$quote//;s/$quote$//;s/$quote$quote/$quote/g"

if [ -n "$1" ]; then
    sed -E "$sed_pattern" "$1"
else
    sed -E "$sed_pattern"
fi
