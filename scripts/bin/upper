#!/usr/bin/env bash
usage() {
    printf "upper: usage: upper CONTENT\n" >&2
}

exit_with_error() {
    printf "upper: error: %s\n" "$1" >&2
    usage
    exit 1
}

if ! [ -p /dev/stdin ] && ! [ "$#" -gt 0 ]; then
    exit_with_error "missing CONTENT argument"
fi

if [ -p /dev/stdin ]; then
    tr '[:lower:]' '[:upper:]'
else
    echo "$@" | tr '[:lower:]' '[:upper:]'
fi
