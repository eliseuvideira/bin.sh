#!/usr/bin/env bash
config_variables="$(jq -r '.container_name+","+.user+","+.dbname' "$HOME/.psql_configuration")"
IFS=, read -r container_name user dbname <<<"$config_variables"
docker exec \
  --tty \
  --interactive \
  "$container_name" \
    psql \
    --user="$user" \
    --dbname="$dbname" \
    -P 'pager=off' \
    -P 'expanded=on'

